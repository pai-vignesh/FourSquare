<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/content_margin"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Password3"
            android:text="@string/enter_password"
            android:textSize="@dimen/label_textSize"
            android:textColor="#b5abab"
            android:fontFamily="@font/avenir_book"
            android:gravity="center"
            android:layout_marginTop="80dp" />

        <EditText
            android:id="@+id/password_entry3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/edit_textSize"
            android:imeOptions="actionNext"
            android:text=""
            android:textColor="#FFFFFF"
            android:fontFamily="@font/avenir_book"
            tools:ignore="HardcodedText,MissingConstraints"
            android:ems="10"
            app:backgroundTint="@color/textGrey"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_Password2"
            android:text="@string/confirm_password"
            android:textSize="@dimen/label_textSize"
            android:textColor="#b5abab"
            android:fontFamily="@font/avenir_book"
            android:gravity="center"
            android:layout_marginTop="@dimen/standardMargin" />

        <EditText
            android:id="@+id/confirm_password_entry2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/edit_textSize"
            android:text=""
            android:textColor="#FFFFFF"
            android:imeOptions="actionDone"
            android:fontFamily="@font/avenir_book"
            tools:ignore="HardcodedText,MissingConstraints"
            android:ems="10"
            app:backgroundTint="@color/textGrey"
            android:inputType="textPassword" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:text="@string/submit"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/avenir_book"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_marginTop="80dp"
            tools:ignore="MissingConstraints"
            app:cornerRadius="@dimen/content_margin"
            android:background="@drawable/button_border"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>