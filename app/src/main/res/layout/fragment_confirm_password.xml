<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/txtGuideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Password3"
            android:text="@string/enter_password"
            android:textSize="@dimen/label_textSize"
            android:textColor="#b5abab"
            android:fontFamily="@font/avenir_book"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="@dimen/content_margin"
            app:layout_constraintTop_toBottomOf="@id/txtGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/password_entry3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/edit_textSize"
            android:imeOptions="actionNext"
            android:text=""
            android:textColor="#FFFFFF"
            android:fontFamily="@font/avenir_book"
            android:layout_marginHorizontal="@dimen/content_margin"
            tools:ignore="HardcodedText,MissingConstraints"
            android:ems="10"
            app:backgroundTint="@color/textGrey"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/Password3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_Password2"
            android:text="@string/confirm_password"
            android:textSize="@dimen/label_textSize"
            android:textColor="#b5abab"
            android:fontFamily="@font/avenir_book"
            android:gravity="center"
            android:layout_marginTop="@dimen/standardMargin"
            app:layout_constraintTop_toBottomOf="@id/password_entry3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="@dimen/content_margin"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/confirm_password_entry2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/edit_textSize"
            android:text=""
            android:textColor="#FFFFFF"
            android:imeOptions="actionDone"
            android:fontFamily="@font/avenir_book"
            tools:ignore="HardcodedText,MissingConstraints"
            android:ems="10"
            app:backgroundTint="@color/textGrey"
            android:layout_marginHorizontal="@dimen/content_margin"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/confirm_Password2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:text="@string/submit"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/avenir_book"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_marginTop="80dp"
            tools:ignore="MissingConstraints"
            app:cornerRadius="@dimen/content_margin"
            android:layout_marginHorizontal="@dimen/content_margin"
            android:background="@drawable/button_border"
            app:layout_constraintTop_toBottomOf="@id/confirm_password_entry2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>