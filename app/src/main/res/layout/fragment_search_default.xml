<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/useLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="20dp"
        android:fontFamily="@font/avenir_book"
        android:gravity="start"
        android:text="@string/currentLocation"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:drawablePadding="30dp"
        app:drawableLeftCompat="@drawable/location_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/useMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="20dp"
        android:background="@drawable/border_set"
        android:fontFamily="@font/avenir_book"
        android:gravity="start"
        android:textColor="@color/black"
        android:text="@string/searchArea"
        android:textSize="20sp"
        android:drawablePadding="30dp"
        app:drawableLeftCompat="@drawable/map_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/useLocation"
        />


</androidx.constraintlayout.widget.ConstraintLayout>